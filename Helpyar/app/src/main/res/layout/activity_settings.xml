<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".HomeActivity"
android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        android:background="@drawable/toolbaroutline"
        app:popupTheme="@color/colorPrimary"
        app:title="Settings"
        app:titleTextColor="@color/colorPrimary">
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/emailsettings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="TextView"
                android:gravity="center"/>

            <EditText
                android:id="@+id/fnameset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="First name" />

            <EditText
                android:id="@+id/lnameset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Last name" />

            <EditText
                android:id="@+id/dobset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="DOB YYYY-MM-DD" />

            <TextView
                android:id="@+id/ageset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your DOB" />

            <EditText
                android:id="@+id/passwordset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|textPassword"
                android:hint="password"/>

            <EditText
                android:id="@+id/bioset"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:hint="BIO"/>

            <EditText
                android:id="@+id/pnoset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned|number|textPersonName"
                android:hint="Phone Number"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>