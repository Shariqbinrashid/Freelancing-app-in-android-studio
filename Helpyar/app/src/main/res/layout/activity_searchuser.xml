<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".searchuser">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarsearchuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:title="Search user"
        android:layout_alignParentTop="true"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        android:background="@drawable/toolbaroutline"
        app:popupTheme="@color/colorPrimary"
        app:titleTextColor="@color/colorPrimary"

        ></androidx.appcompat.widget.Toolbar>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter User email"
        android:layout_alignParentStart="true"
        android:id="@+id/edittextsearchuser"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/toolbarsearchuser"
        android:layout_marginTop="0dp" />
        <Button
            android:id="@+id/searchuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_gravity="right"
            android:text="search"
            android:textSize="15dp"
            ></Button>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#E8DFDF">
        <LinearLayout
            android:id="@+id/postedjobitemlinearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:padding="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/fnamelnamesearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Fname and lname"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp"
                ></TextView>
            <TextView
                android:id="@+id/dobsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="0dp"
                android:text="dob"
                android:textSize="25dp"
                ></TextView>
            <TextView
                android:id="@+id/biosearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="0dp"
                android:text="Bio"
                android:textSize="25dp"
                ></TextView>

            <Button
                android:id="@+id/goprofilesearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_gravity="right"
                android:text="profile"
                android:textSize="15dp"
                ></Button>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>