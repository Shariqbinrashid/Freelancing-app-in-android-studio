<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".profileSerachUser">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarsearchprofuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:title="Search user"
        android:layout_alignParentTop="true"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        android:background="@drawable/toolbaroutline"
        app:popupTheme="@color/colorPrimary"
        app:titleTextColor="@color/colorPrimary"

        ></androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/toolbarsearchprofuser"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/etprofsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/flnameSearchProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textSize="10dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/bioprofsearch"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:ems="10"
                android:background="@drawable/toolbaroutline"
                android:gravity="start|top"
                android:textColor="@color/colorPrimary"
                android:inputType="textMultiLine"
                android:hint="BIO"/>

            <Button
                android:id="@+id/jobsProfilesearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:text="JOBS"

                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/gigsProfilesearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:text="GIGS"

                android:textColor="@android:color/white" />



        </LinearLayout>

</RelativeLayout>